<!DOCTYPE html>
<html>
  <head>
    <title>HealthcareServer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1">

  </head>

  <body>
    <div id="layout">
        <!-- Menu toggle -->
        <a href="#menu" id="menuLink" class="menu-link">
            <!-- Hamburger icon -->
            <span></span>
        </a>
        <div id="menu">
            <div class="pure-menu">
                <a class="pure-menu-heading" href="/">HealthCare</a>
                <ul class="pure-menu-list">
                    <li class="pure-menu-item">
                      <%= link_to 'Doctors', doctors_path, class: 'pure-menu-link'  %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to 'Users', users_path, class: 'pure-menu-link'  %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to 'Medicines', medicines_path, class: 'pure-menu-link'  %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to 'Doctor Appointments', doctor_appointments_path, class: 'pure-menu-link'  %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to 'Doctor Notifications', doctor_notifications_path, class: 'pure-menu-link'  %>
                    </li>
                    <li class="pure-menu-item">
                        <%= link_to 'Prescribed Medicines', prescribed_medicines_path, class: 'pure-menu-link'  %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to 'In Patients', in_patients_path, class: 'pure-menu-link'  %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to 'Medicine Intake Logs', medicine_intake_logs_path, class: 'pure-menu-link' %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to 'Prescriptions', prescriptions_path, class: 'pure-menu-link'  %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to 'User Vitals logs', user_vital_logs_path, class: 'pure-menu-link'  %>
                    </li>
                    <li class="pure-menu-item">
                      <%= link_to 'User Vitals Summary', user_vital_summary_path, class: 'pure-menu-link'  %>
                    </li>
                    <li class="pure-menu-item"><a href="https://github.com/rajagopal28/healthcare-server" target="_blank" class="pure-menu-link">About</a></li>
                </ul>
            </div>
        </div>
        <%= yield %>
    </div>
  </body>
</html>
