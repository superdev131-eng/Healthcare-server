<p id="notice"><%= notice %></p>

<h1>User Vital Logs</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Logged on</th>
      <th>Notes</th>
      <th>Vital name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_vital_logs.each do |user_vital_log| %>
      <tr>
        <td><%= user_vital_log.user %></td>
        <td><%= user_vital_log.logged_on %></td>
        <td><%= user_vital_log.notes %></td>
        <td><%= user_vital_log.vital_name %></td>
        <td><%= link_to 'Show', user_vital_log %></td>
        <td><%= link_to 'Edit', edit_user_vital_log_path(user_vital_log) %></td>
        <td><%= link_to 'Destroy', user_vital_log, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

