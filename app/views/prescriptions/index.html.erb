<p id="notice"><%= notice %></p>

<h1>Prescriptions</h1>
<% if @user %>
  <h3>User: <%= @user.first_name %>&nbsp;<%= @user.last_name %></h3>
<% end %>
<% if @doctor %>
  <h3>Doctor: <%= @doctor.first_name %>&nbsp;<%= @doctor.last_name %></h3>
<% end %>

<table class="pure-table pure-table-bordered">
  <thead>
    <tr class="<%= cycle('pure-table-odd', '') -%>">
      <th>User</th>
      <th>Doctor</th>
      <th>Notes</th>
      <th>Prescribed on</th>
      <th>Valid till</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prescriptions.each do |prescription| %>
      <tr class="<%= cycle('pure-table-odd', '') -%>">
        <td><%= prescription.user.first_name%>&nbsp;<%= prescription.user.last_name%></td>
        <td><%= prescription.doctor.first_name%>&nbsp;<%= prescription.doctor.last_name%></td>
        <td><%= prescription.notes %></td>
        <td><%= prescription.prescribed_on %></td>
        <td><%= prescription.valid_till %></td>
        <td><%= link_to 'Show', prescription, class: 'pure-button  pure-button-primary'  %></td>
        <td><%= link_to 'Edit', edit_prescription_path(prescription), class: 'pure-button  button-secondary'  %></td>
        <td><%= link_to 'Destroy', prescription, method: :delete, data: { confirm: 'Are you sure?' }, class: 'pure-button  button-warning'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Prescription', new_prescription_path, class: 'pure-button  button-secondary'  %>
