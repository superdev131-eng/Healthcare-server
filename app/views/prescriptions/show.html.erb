<p id="notice"><%= notice %></p>

<p>
  <strong>User:</strong>
  <%= @prescription.user .first_name%>&nbsp;<%=@prescription.user.last_name%>
</p>

<p>
  <strong>Doctor:</strong>
  <%= @prescription.doctor.first_name%>&nbsp;<%= @prescription.doctor.last_name%>
</p>

<p>
  <strong>Notes:</strong>
  <%= @prescription.notes %>
</p>

<p>
  <strong>Prescribed on:</strong>
  <%= @prescription.prescribed_on %>
</p>

<p>
  <strong>Valid till:</strong>
  <%= @prescription.valid_till %>
</p>
<h3>Prescribed Medicines</h3>
<table>
  <thead>
    <tr>
      <th>Medicine</th>
      <th>Notes</th>
      <th>Before breakfast</th>
      <th>After breakfast</th>
      <th>Before lunch</th>
      <th>After lunch</th>
      <th>Before dinner</th>
      <th>After dinner</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @prescription.prescribed_medicines.each do |pm| %>
      <tr>
        <td><%= pm.medicine.name %></td>
        <td><%= pm.notes %></td>
        <td><%= pm.before_breakfast %></td>
        <td><%= pm.after_breakfast %></td>
        <td><%= pm.before_lunch %></td>
        <td><%= pm.after_lunch %></td>
        <td><%= pm.before_dinner %></td>
        <td><%= pm.after_dinner %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_prescription_path(@prescription) %> |
<%= link_to 'Back', prescriptions_path %>
